generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  clerkId   String?  @unique // For future auth integration
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lifeBank      LifeBank?
  relationships Relationship[]
  journalEntries JournalEntry[]
  goals         Goal[]
}

model LifeBank {
  id             String   @id @default(uuid())
  userId         String   @unique
  dateOfBirth    DateTime
  lifeExpectancy Int      @default(80) // In years
  gender         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Relationship {
  id          String   @id @default(uuid())
  userId      String
  name        String
  type        String   // Partner, Family, Friend, etc.
  birthday    DateTime?
  healthScore Int      @default(50)
  hoursLogged Float    @default(0)
  hoursGoal   Float?   // Weekly goal
  lastContact DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model JournalEntry {
  id        String   @id @default(uuid())
  userId    String
  mood      String
  prompt    String?
  content   String   @db.Text
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Goal {
  id          String   @id @default(uuid())
  userId      String
  title       String
  description String?
  category    String?  // Career, Health, etc.
  targetDate  DateTime?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
